<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:clipToPadding="true"
    android:fillViewport="true"
    android:scrollbarStyle="insideOverlay"
    app:layout_scrollFlags="scroll">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="foundit.foundit.Registro_Comercio"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp"
        tools:showIn="@layout/activity_registro__comercio">

        <EditText
            android:id="@+id/nombreDelComercioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/plainTextNombre"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/plainTextNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/nombreDelComercioText"
            android:layout_marginTop="9dp"
            android:text="* Nombre del Comercio:"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nombreDelComercioText"
            android:layout_below="@+id/nombreDelComercioText"
            android:layout_marginTop="15dp"
            android:text="* Pais:" />

        <Spinner
            android:id="@+id/PaisSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/nombreDelComercioText"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/PaisSpinner"
            android:layout_below="@+id/PaisSpinner"
            android:layout_marginTop="12dp"
            android:text="* Direccion Postal:" />

        <EditText
            android:id="@+id/direccionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Calle las monas, 33"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/ciudadPlainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/direccionText"
            android:layout_below="@+id/direccionText"
            android:layout_marginTop="8dp"
            android:text="* Ciudad" />

        <EditText
            android:id="@+id/ciudadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignStart="@+id/ciudadPlainText"
            android:layout_below="@+id/ciudadPlainText"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Valencia"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/codPostalText"
            android:layout_alignStart="@+id/codPostalText"
            android:layout_alignTop="@+id/ciudadPlainText"
            android:text="* Codigo Postal:" />

        <EditText
            android:id="@+id/codPostalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ciudadText"
            android:layout_alignBottom="@+id/ciudadText"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/plainTextNombre"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="46111"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ciudadText"
            android:layout_below="@+id/ciudadText"
            android:layout_marginTop="12dp"
            android:text="* Teléfono:" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="619444555"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText10"
            android:layout_below="@+id/editText10"
            android:layout_marginTop="13dp"
            android:text="* Categoria:" />

        <Spinner
            android:id="@+id/categoriaSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText10"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/categoriaSpinner"
            android:layout_below="@+id/categoriaSpinner"
            android:layout_marginTop="13dp"
            android:text="Direccion de correo electrónico" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="correo@correo.com"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText12"
            android:layout_below="@+id/editText12"
            android:layout_marginTop="12dp"
            android:text="Sitio web" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="9dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="www.casamanolo.com"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText13"
            android:layout_below="@+id/editText13"
            android:layout_marginTop="9dp"
            android:text="Registro" />

        <Button
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/registro"
            android:layout_marginEnd="20dp"
            android:text="Cancelar" />

    </RelativeLayout>
</ScrollView>
