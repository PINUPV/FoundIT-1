<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_ficha_comercio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foundit.foundit.Fragficha_comercio">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="396dp"
            android:layout_height="255dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/rating_total"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="101dp"
                android:layout_height="133dp"
                android:layout_weight="1"
                android:numStars="5"
                android:rating="1"
                android:stepSize="0.5" />

            <ImageView
                android:id="@+id/img_comercio"
                android:layout_width="wrap_content"
                android:layout_height="292dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:src="@drawable/comercio"
                tools:layout_editor_absoluteY="342dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/bt_like"
                    android:layout_width="58dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/likevacio"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.882"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_like"
            android:layout_width="403dp"
            android:layout_height="257dp"
            android:layout_weight="1">

            <RatingBar
                android:id="@+id/rating_comercio"
                android:layout_width="241dp"
                android:layout_height="44dp"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bt_cerrar_fichaCom"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="168dp"
                android:layout_marginStart="147dp"
                android:layout_marginTop="184dp"
                android:text="Cerrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating_comercio"
                app:layout_constraintVertical_bias="1.0" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</FrameLayout>
