<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_ficha_comercio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foundit.foundit.Fragficha_comercio">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/rating_total"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:numStars="5"
                android:rating="1"
                android:stepSize="0.5" />

            <ImageView
                android:id="@+id/img_comercio"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:src="@drawable/comercio"
                tools:layout_editor_absoluteY="342dp" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_comercio"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/button_like"
            android:layout_width="403dp"
            android:layout_height="257dp"
            android:layout_weight="1">

            <RatingBar
                android:id="@+id/rating_comercio"
                android:layout_width="241dp"
                android:layout_height="44dp"
                android:layout_marginEnd="90dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bt_cerrar_fichaCom"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="168dp"
                android:layout_marginStart="147dp"
                android:layout_marginTop="184dp"
                android:text="Cerrar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating_comercio" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="99dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/like_vacio"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="97dp" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</FrameLayout>
